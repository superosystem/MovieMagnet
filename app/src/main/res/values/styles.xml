<resources>

    <!-- Base application theme. -->
    <style name="Theme.Tmdb" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.Tmdb.Feed">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Tmdb.Search">
        <item name="android:windowSharedElementEnterTransition">@transition/search_shared_enter
        </item>
        <item name="android:windowSharedElementReturnTransition">@transition/search_shared_return
        </item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TmdbDarkOverlay" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <!-- Used to theme dark elements in light themed screens.
             Extend the material dark Action Bar overlay as this contains text styling. -->
    </style>

    <style name="SearchViewTheme" parent="TmdbDarkOverlay">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.Tmdb.SearchView</item>
    </style>

    <style name="Widget.Tmdb.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="TmdbMargin">
        <item name="android:layout_marginStart">@dimen/padding_normal</item>
        <item name="android:layout_marginEnd">@dimen/padding_normal</item>
    </style>

    <style name="TmdbMargin.Small">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/padding_micro</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="TmdbMargin.Title">
        <item name="android:layout_marginTop">@dimen/padding_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="TmdbMargin.Body">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/max_lines</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
